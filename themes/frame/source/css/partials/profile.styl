.profile 
    display flex
    flex-direction row-reverse
    
    .profile-content 
        margin 0 0 0 0

        .profile-title
            margin-top 0 
            margin-bottom $margin-m-0
            text-align: center
            
        .profile-body
            margin-top 0
            margin-bottom 1.5rem
            text-align: center

        .profile-title
            text-style(heading-h1)

        .profile-body
            text-style(body-default)

        .profile-link
            margin-top 0
            margin-bottom $margin-m-1
            text-style(header)
            
    .profile-head
        margin-top:2.5rem
        margin-bottom:2.5rem
        width 100%

    .profile-text
        min-width:55%
        margin:1rem
        width 100%

    .profile-image
        min-width 100%
        text-align: center

        img
            width 89px
            //margin-left 25px
//            margin-top -7px

    .post-title
        margin-bottom $margin-m-1
        margin-top 30px
        text-style(heading-h1)
        text-align: center

    .post-date
        text-align: center

    .main-page-post-list-item
        padding-top 20px
        margin-bottom 40px
        border solid 2px $color-text-primary
        border-style solid none none none 

.rsslinks
    margin: 10px;

@media (max-width: 680px)
    .profile
        flex-wrap wrap
        
        .profile-content
            width 100%
            margin-top $margin-m-1
            