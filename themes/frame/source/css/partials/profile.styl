.profile 
    margin-top $margin-primary
    display flex
    flex-direction row-reverse
    
    .profile-content 
        margin 0 $margin-l-0 0 0

        .profile-title
            margin-top 0 
            margin-bottom $margin-m-0
            
        .profile-body
            margin-top 0
            margin-bottom $margin-l-1

        .profile-title
            text-style(heading-h1)

        .profile-body
            text-style(body-default)

        .profile-link
            margin-top 0
            margin-bottom $margin-m-1
            text-style(header)
            

    .profile-image
        width 89px
        float right

    .post-title
        margin-bottom $margin-m-1
        text-style(heading-h1)

    .main-page-post-list-item
        padding-top 20px
        margin-bottom 40px
        border solid 2px $color-text-primary
        border-style solid none none none 

@media (max-width: 480px)
    .profile
        flex-wrap wrap
        
        .profile-content
            width 100%
            margin-top $margin-m-1
            